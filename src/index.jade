doctype
html(lang="en", itemtype="http://schema.org/WebPage" itemscope)
  
  head(prefix="og: http://ogp.me/ns#")
    include _meta.jade
    include _css.jade
  
  body
    
    .title
      h1
        img(src="/react-logo.png" alt="React.js")
        br.phone-only
        | React
        br.phone-only
        em .careers
      
      h2 
        | The open source directory of companies using React.js.
        br
        | Find jobs at companies who are using your favorite framework!


    include _alerts.jade

    section
      h1 Companies using React.js
      
      a.button.red(href="#addcompany") Add a company
      
      .clear-both
      each data, title in companies
        a.company(href=data.url target="_blank")
          img(src=data.logo alt=title)
          span
            | Search for React.js jobs at
            br
            = title
      .clear-both

    footer#addcompany
      h2 Add a company
      | Email company name, 500x500px logo, and careers url to 
      a(href="mailto:admin@react.careers") admin@react.careers
      br
      br
      em or
      br
      br
      | Create a pull request on 
      a(href="https://github.com/stefanRitter/react.careers" target="_blank") github
    
    a(href="https://github.com/stefanRitter/react.careers")
      img(style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/52760788cde945287fbb584134c4cbc2bc36f904/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f77686974655f6666666666662e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_white_ffffff.png")

    include _scripts.jade
