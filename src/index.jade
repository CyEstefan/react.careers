- var url         = "http://react.careers"
- var title       = "React.careers - The ultimate directory of companies using React.js"
- var description = "The ultimate open source directory of companies using React.js - Find jobs at companies who are using your favorite framework: React.js"

doctype
html(lang="en", itemtype="http://schema.org/WebPage" itemscope)
  
  head(prefix="og: http://ogp.me/ns#")
    include shared/_meta.jade
  
  body
    include shared/_title.jade
    include shared/_alerts.jade
    
    .clear-both

    section
      h1 Companies using React.js
      
      a.button(href="#addcompany") Add a company
      
      .clear-both
      each data, title in companies
        - var href="/react.careers/companies/"+title.toLowerCase().replace(/ /g,"-")+".html"
        a.company(href=href)
          img(src=data.logo alt=title)
          span
            | Search for React.js jobs at
            br
            = title      
      .clear-both

    footer#addcompany
      h2 Add a company
      | Create a pull reqeust with company name, 500x500px logo, and careers url on 
      a(href="https://github.com/stefanRitter/react.careers") GitHub
      | .
      
      p(style="margin-top:3em;")
        em
          | Built by 
          a(href="http://stefanritter.com/") Stefan Ritter
    
    a(href="https://github.com/stefanRitter/react.careers")
      img(style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/a6677b08c955af8400f44c6298f40e7d19cc5b2d/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f677261795f3664366436642e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png")
    
    include shared/_scripts.jade
