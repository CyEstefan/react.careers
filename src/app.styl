  font-size 18px
  font-family 'Raleway', Helvetica, Arial, sans-serif
  text-align center

h1, h2
  font-weight 400

h1
  color blue
  background gray
  margin-top 0
  font-size 64px
  padding 1em 0.5em 0.5em
  vertical-align middle
